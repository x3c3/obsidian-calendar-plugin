{
  "name": "calendar",
  "version": "2.0.0",
  "description": "Calendar view of your daily, weekly, and monthly notes with metadata tracking for tasks, tags, word count, and streaks",
  "author": "liamcain",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "bun run check && vite build",
    "check": "biome check src/ && svelte-check",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "version": "bun run version-bump.ts"
  },
  "dependencies": {
    "svelte": "^5.53.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.8",
    "@types/node": "^25.3.0",
    "moment": "^2.30.1",
    "obsidian": "^1.12.2",
    "svelte-check": "^4.4.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
